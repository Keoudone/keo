void init(void)
{
glClearColor(0.1,1.1,0.1,1.1);
glPointSize(10.0);
glMatrixMode(GL_PROJECTION);
glLoadIdentity();
glLineWidth(4.0);
gluOrtho2D(0.0,400.0,0.0,300.0);
}
